{
  "name": "email-automation-pro",
  "version": "2.1.0",
  "description": "Email Automation Pro - Task-based folder watching with checksums and QR receipts",
  "main": "main.js",
  "author": "Peter",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --mac --win --linux"
  },
  "build": {
    "appId": "com.emailautomation.pro",
    "productName": "Email Automation Pro",
    "files": [
      "main.js",
      "index.html",
      "preload.js",
      "package.json",
      "node_modules/**/*",
      "Storm_Video_For_Email_Automation_Pro.mp4",
      "Email-Pro-Vid.mp4"
    ],
    "extraResources": [
      {
        "from": "credentials.json",
        "to": "credentials.json"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.16.12",
    "@noble/post-quantum": "^0.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^118.0.0",
    "openai": "^4.86.2",
    "openpgp": "^6.0.1",
    "qrcode": "^1.5.3",
    "sql.js": "^1.12.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
